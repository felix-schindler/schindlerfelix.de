{
	"lock": false,
	"tasks": {
		"check": "DENO_FUTURE=1 deno fmt --check && deno lint && deno check **/*.ts && deno check **/*.tsx",
		"dev": "DENO_FUTURE=1 deno run -A --watch=static/,routes/ dev.ts",
		"build": "DENO_FUTURE=1 deno run -A dev.ts build",
		"start": "DENO_FUTURE=1 deno run -A main.ts",
		"update": "DENO_FUTURE=1 deno run -A -r jsr:@fresh/update ."
	},
	"lint": { "rules": { "tags": ["fresh", "recommended"] } },
	"exclude": ["**/_fresh/*"],
	"fmt": { "useTabs": true },
	"imports": {
		"@/": "./",
		"@deno/gfm": "jsr:@deno/gfm@^0.8.2",
		"@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.7",
		"@preact/signals": "npm:@preact/signals@^1.2.3",
		"@std/http": "jsr:@std/http@^0.224.4",
		"@std/path": "jsr:@std/path@^0.225.2",
		"fresh": "jsr:@fresh/core@^2.0.0-alpha.16",
		"icons/": "https://deno.land/x/tabler_icons_tsx@0.0.6/tsx/",
		"preact": "npm:preact@^10.22.0",
		"prism": "npm:prism@^4.1.2",
		"tailwindcss": "npm:tailwindcss@3.4.3",
		"tailwindcss/plugin": "npm:tailwindcss@3.4.3/plugin.js"
	},
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.asynciterable",
			"deno.ns"
		],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": [
			"a",
			"img",
			"source",
			"body",
			"html",
			"head"
		]
	}
}
