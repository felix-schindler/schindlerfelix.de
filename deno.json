{
	"$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/main/cli/schemas/config-file.v1.json",
	"nodeModulesDir": "auto",
	"lock": false,
	"tasks": {
		"ok": "deno fmt --check . && deno lint . && deno check",
		"dev": "deno run -A --watch=static/,routes/ dev.ts",
		"build": "deno run -A dev.ts build",
		"update": "deno run -A -r jsr:@fresh/update .",
		"start": "deno serve -A _fresh/server.js"
	},
	"imports": {
		"@/": "./",
		"@deno/gfm": "jsr:@deno/gfm@^0.11.0",
		"@fresh/plugin-tailwind": "jsr:@fresh/plugin-tailwind@^0.0.1-alpha.9",
		"@preact/signals": "npm:@preact/signals@^2.2.1",
		"@std/http": "jsr:@std/http@^1.0.20",
		"@std/path": "jsr:@std/path@^1.0.8",
		"d3-geo": "npm:d3-geo@^3.1.1",
		"d3-geo-projection": "npm:d3-geo-projection@^4.0.0",
		"fresh": "jsr:@fresh/core@^2.0.0-alpha.46",
		"icons/": "https://deno.land/x/tabler_icons_tsx@0.0.7/tsx/",
		"pocketbase": "npm:pocketbase@^0.26.2",
		"preact": "npm:preact@^10.26.9",
		"tailwindcss": "npm:tailwindcss@^4.1.11",
		"topojson-client": "npm:topojson-client@^3.1.0"
	},
	"compilerOptions": {
		"lib": ["dom", "dom.asynciterable", "deno.ns"],
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxPrecompileSkipElements": ["a", "img", "source", "body", "html", "head"]
	},
	"fmt": { "useTabs": true },
	"lint": {
		"rules": {
			"tags": ["fresh", "recommended"],
			"exclude": ["react-no-danger"]
		}
	},
	"exclude": ["**/_fresh/*", "docker-compose.yaml"]
}
